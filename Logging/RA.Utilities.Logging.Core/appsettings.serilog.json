{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async",
      "Serilog.Enrichers.Sensitive",
      "Serilog.Exceptions"
    ],
    "Enrich": [
      { "Name": "WithExceptionDetails" },
      {
        "Name": "WithSensitiveDataMasking",
        "Args": {
          "options": {
            "MaskValue": "***SECRET***",
            "MaskProperties": [
              {
                "Name": "password"
              },
              {
                "Name": "Authorization",
                "Options": {
                  "ShowFirst": 7,
                  "PreserveLength": false
                }
              }
            ],
            "Mode": "Globally"
          }
        }
      }
    ],
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "File",
            "Args": {
              "rollingInterval": "Day",
              "path": "/Users/macintoks/Documents/Logs/VsClArch.Template.Api/VsClArch.Template.Api_.txt",
              "outputTemplate": "{Timestamp:G} [{Level}] ({XRequestId})({TraceId}) {Message:lj} ({SourceContext}){NewLine}{Exception}",
              "retainedFileCountLimit": null,
              "rollOnFileSizeLimit": true
            }
          },
          {
            "Name": "Console",
            "Args": {
              "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
              "outputTemplate": "{Timestamp:G} [{Level}] ({XRequestId})({TraceId}) {Message:lj} ({SourceContext}){NewLine}{Exception}"
            }
          }
        ]
      }
    },
    "Properties": {
      "ApplicationName": "VsClArch.Template.Api"
    }
  }
}
